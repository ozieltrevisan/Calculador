<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cardview_dark_background"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
    android:id="@+id/txt_expressao"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:text=""
    android:textColor="@color/verde"
    android:textSize="40sp"
    android:gravity="end"
    android:layout_marginRight="10dp"
    android:ellipsize="start"
    android:singleLine="true" />
    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
        android:id="@+id/txt_resultado"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text=""
        android:textColor="@color/verde"
        android:textSize="30sp"
        android:gravity="end"
        android:layout_marginRight="10dp"
        android:ellipsize="end"
        android:maxLines="1" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal" >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_limpar"
            style="@style/Operators_Button"
            android:text="c"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_parenteses"
            style="@style/Operators_Button"
            android:text="()"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_porcento"
            style="@style/Operators_Button"
            android:text="%"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_divisao"
            style="@style/Operators_Button"
            android:text="/"
            />




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_sete"
            style="@style/Number_Button"
            android:text="7"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_oito"
            style="@style/Number_Button"
            android:text="8"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_nove"
            style="@style/Number_Button"
            android:text="9"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_mutiplicacao"
            style="@style/Operators_Button"
            android:text="x"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_quatro"
            style="@style/Number_Button"
            android:text="4"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_cinco"
            style="@style/Number_Button"
            android:text="5"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_seis"
            style="@style/Number_Button"
            android:text="6"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_subtracao"
            style="@style/Operators_Button"
            android:text="-"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_um"
            style="@style/Number_Button"
            android:text="1"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_dois"
            style="@style/Number_Button"
            android:text="2"
            />
        <Button
            android:id="@+id/bt_tres"
            style="@style/Number_Button"
            android:text="3"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_soma"
            style="@style/Operators_Button"
            android:text="+"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_ponto"
            style="@style/Number_Button"
            android:text="."
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_zero"
            style="@style/Number_Button"
            android:text="0"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_virgula"
            style="@style/Number_Button"
            android:text=","
            />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_igual"
            style="@style/Operators_Button"
            android:text="="
            />
    </LinearLayout>

</LinearLayout>